@model IEnumerable<Ctec_Materiais.Models.Material>

@{
    ViewData["Title"] = "Início";
}

<h2>Início</h2>

<p>
    <a asp-action="Create">Adicionar novo material</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMaterial">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdMaterial">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMaterial">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
